<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/border">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgVoucher"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_not_available" />

                <ImageView
                    android:id="@+id/imgComingSoon"
                    android:layout_width="120dp"
                    android:layout_height="70dp"
                    android:scaleType="fitXY"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/comming_soon"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/imgRedeemedVoucher"
                    android:layout_width="120dp"
                    android:layout_height="70dp"
                    android:scaleType="fitXY"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/redeem"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/imgExpiredVoucher"
                    android:layout_width="120dp"
                    android:layout_height="70dp"
                    android:scaleType="fitXY"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/expired"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/tvVoucherUsages"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Ashish"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_marginTop="100dp"
                    android:background="@color/transperentred"/>
            </RelativeLayout>



            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp">

                    <TextView
                        android:id="@+id/tvRestaurantName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:textStyle="bold"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgRestoAdd"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/address_icon" />

                    <TextView
                        android:id="@+id/tvRestaurantAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/black"
                        android:textSize="13dp"
                        android:ems="10"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_marginTop="2dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/linearRestoCall"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/imgRestoCall"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/icon_call" />

                    <TextView
                        android:id="@+id/tvRestaurantPhoneNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/black"
                        android:textSize="13dp"
                        android:layout_gravity="center"/>

                </LinearLayout>


                <TextView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/tvVoucherDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="17dp"/>

                <Button
                    android:id="@+id/btnViewCoupon"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:minHeight="35dp"
                    android:text="@string/viewcoupn"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="right"
                    android:textColor="@color/white"
                    android:visibility="gone"
                    android:background="@drawable/green_corener_border"/>


               <!-- <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/voucherStartTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blue"
                        android:textSize="15dp"
                        android:text="More>>" />

                    <TextView
                        android:id="@+id/voucherEndTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blue"
                        android:textSize="15dp"
                        android:text="More>>"/>

                </LinearLayout>-->

            </LinearLayout>



        </LinearLayout>

    </LinearLayout>

</LinearLayout>