<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/white">

    <TextView
        style="@style/CommonTextStyle"
        android:id="@+id/txtViewHeaderTitle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="40dp"
        android:gravity="center_vertical|center_horizontal"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/black"
        android:padding="5dp"
        android:text="@string/app_name"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightGray"/>

    <TextView
        style="@style/CommonTextStyle"
        android:id="@+id/txtViewDialogContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="@color/black"
        android:layout_marginLeft="5dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:minHeight="40dp"
        android:padding="5dip" />

    <LinearLayout
        android:id="@+id/layoutBtn1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="80dp"
        android:background="@android:color/transparent"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:padding="10dp" >


        <Button
            style="@style/CommonTextStyle"
            android:id="@+id/btnNegative"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="5dp"
            android:lines="2"
            android:padding="5dp"
            android:layout_weight="1"
            android:textAllCaps="true"
            android:text="@string/lblCancel"
            android:background="@drawable/button_bg_theme"
            android:textColor="@color/appHeaderTextColor"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Button
            style="@style/CommonTextStyle"
            android:id="@+id/btnPositive"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:lines="2"
            android:padding="5dp"
            android:layout_weight="1"
            android:text="OK"
            android:textAllCaps="true"
            android:background="@drawable/button_bg_theme"
            android:textColor="@color/appHeaderTextColor"
            android:textAppearance="?android:attr/textAppearanceLarge"
        />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="80dp"
        android:id="@+id/layoutBtn2"
        android:background="@android:color/transparent"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:padding="10dp" >


        <Button
            style="@style/CommonTextStyle"
            android:id="@+id/btnPositive2"
            android:layout_width="170dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:lines="2"
            android:padding="5dp"
            android:text="OK"
            android:background="@drawable/button_bg_theme"
            android:textColor="@color/appHeaderTextColor"
            android:textAllCaps="true"
            android:textAppearance="?android:attr/textAppearanceLarge"
        />


    </LinearLayout>

</LinearLayout>